   openvpn_max_concurrent_clients = "${var.openvpn_max_concurrent_clients}"
   openvpn_user = "${var.openvpn_user}"
   openvpn_group = "${var.openvpn_group}"
   openvpn_enable_persist_key = "${var.openvpn_enable_persist_key}"
   openvpn_enable_persist_tun = "${var.openvpn_enable_persist_tun}"
   openvpn_status_filename = "${var.openvpn_status_filename}"
   openvpn_log_filename = "${var.openvpn_log_filename}"
   openvpn_log_enable_append = "${var.openvpn_log_enable_append}"
   openvpn_log_verbosity = "${var.openvpn_log_verbosity}"
   openvpn_slience_repeat_messages = "${var.openvpn_slience_repeat_messages}"
   openvpn_notify_client_on_restart = "${var.openvpn_notify_client_on_restart}"
 }
}
